      <div class="row d-flex justify-content-center align-items-center h-100">
        
        <div class="row d-flex justify-content-center" style="text-align: center;">
          <h1 class="fw-bold text-white"><%= today %> </h1>
        </div>

          <div class="card">
            <div class="card-body p-5">

  
              <form action="/" method="post" class="d-flex justify-content-center align-items-center mb-4">
                <div class="form-outline flex-fill">
                  <input type="text" id="form2" name="newItem" class="form-control" placeholder="New Task" autocomplete="off" />
                </div>
                <button type="submit" class="btn btn-info ms-2">Add</button>
              </form>
  
        
  
              <!-- Tabs content -->
              <div class="tab-content" id="ex1-content">
                <div class="tab-pane fade show active" id="ex1-tabs-1" role="tabpanel"
                  aria-labelledby="ex1-tab-1">
                  <ul class="list-group mb-0">




                <% for(var i = 0; i < newItems.length; i++){ %>
                    <li class="list-group-item d-flex align-items-center border-0 mb-2 rounded"
                      style="background-color: #f4f6f7;">
                      <input class="form-check-input me-2" type="checkbox" value="" aria-label="..."  />
                      <p> <%= newItems[i] %> </p>
                    </li>
                <% } %>



                  
                  </ul>
                </div>
                
              </div>
              <!-- Tabs content -->
  
            </div>
          </div>
  
     
    </div>
